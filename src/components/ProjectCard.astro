---
import {Skull} from "@lucide/astro";
const { title, description, link } = Astro.props;
---

<div class="border rounded-2xl p-4 shadow hover:shadow-lg transition">
  <h2 class="text-xl font-semibold mb-1">{title}</h2>
  <p class="text-gray-600 mb-2">{description}</p>
  <a href={link} class="text-blue-600 underline" target="_blank" rel="noopener noreferrer">
    View Project
  </a>
	<Skull/>
</div>


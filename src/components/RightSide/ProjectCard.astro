---
import { MoveUpRightIcon } from "@lucide/astro";
import { Image } from "astro:assets";

const { title, description, link, image, width, height } = Astro.props;
---

<a
  href={link}
  target="_blank"
  rel="noopener noreferrer"
  class="block border border-ctp-surface1 rounded-2xl p-4 shadow hover:shadow-lg hover:bg-ctp-surface0/30 transition-all duration-300 cursor-pointer group"
>
  <div class="flex gap-4">
    <Image
      src={image}
      alt={title}
      width={width}
      height={height}
      class="w-[100px] h-[100px] rounded-lg object-cover flex-shrink-0"
    />
    <div class="flex-1">
      <div class="flex mb-1">
        <h2 class="text-xl font-semibold flex-1 text-ctp-text">{title}</h2>
        <MoveUpRightIcon
          class="w-5 h-5 text-ctp-overlay1 group-hover:text-ctp-lavender group-hover:translate-x-1 group-hover:-translate-y-1 transition-all duration-300"
        />
      </div>
      <p class="text-ctp-subtext0 mb-2">{description}</p>
    </div>
  </div>
</a>

---
import '../styles/global.css'
import LeftSide from '../components/LeftSide/LeftSide.astro';
import RightSide from '../components/RightSide/RightSide.astro';
import Footer from '../components/Footer.astro';


// Consts
const description = "Angel Velasquez aspires to be a Machine Learning Engineer and works on engineering usable and feature-rich software.";

const keywords = [
  'Software Engineer',
	'Data Scientist',
	'Web Developer',
];
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
		<meta name="keywords" content={keywords.join(', ')}>
		<meta name="author" content="Angel Velasquez">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} >
    <title>Angel Velasquez</title>
  </head>
  <body class="text-ctp-text bg-ctp-base font-sans p-6 max-w-3xl mx-auto">
		<!-- Content -->
		<div class="grid grid-cols-2 gap-20 mt-10">  
			<LeftSide/>
			<RightSide/>
		</div>
		<Footer/> 
	</body>
</html>


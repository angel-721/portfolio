---
import LeftSide from "../components/LeftSide/LeftSide.astro";
import RightSide from "../components/RightSide/RightSide.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const description =
  "Angel Velasquez aspires to be a Machine Learning Engineer and works on engineering usable and feature-rich software.";
const keywords = ["Software Engineer", "Data Scientist", "Web Developer"];
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords.join(", ")} />
    <meta name="author" content="Angel Velasquez" />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>Angel Velasquez</title>
  </head>
  <body class="text-ctp-text bg-ctp-base font-sans p-6 max-w-5xl mx-auto min-h-screen relative">
    <div class="flex w-full">
      <!-- Left Side - Fixed -->
      <div class="fixed w-[calc(50%-2.5rem)] pr-10">
        <LeftSide />
      </div>
      
      <!-- Right Side - Scrollable -->
      <div class="w-1/2 ml-auto pl-10">
        <div class="min-h-screen flex flex-col">
          <div class="flex-1">
            <RightSide />
          </div>
          <div class="mt-12">
            <Footer />
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
